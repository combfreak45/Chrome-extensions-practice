{
  "manifest_version": 2,
  "name": "Predefined Theme Switcher",
  "version": "1.0",
  "description": "Switch between predefined Chrome themes.",
  "permissions": ["theme"],
  "browser_action": {
    "default_popup": "popup.html",
    "default_icon": "icon.png"
  },
  "background": {
    "service_worker": "background.js"
  }
}
