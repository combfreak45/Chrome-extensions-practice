{
  "manifest_version": 3,
  "name": "Custom Chrome Theme & Night Light",
  "version": "1.0",
  "description": "Create your own theme and enable blue light filter for comfortable browsing.",
  "action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
  "theme": {
    "colors" : {
      "frame" : [71, 105, 91],
      "toolbar" : [207, 221, 192],
      "ntp_text" : [20, 40, 0],
      "ntp_link" : [36, 70, 0],
      "ntp_section" : [207, 221, 192],
      "button_background" : [255, 255, 255]
    },
    "tints" : {
      "buttons" : [0.33, 0.5, 0.47]
    },
    "properties" : {
      "ntp_background_alignment" : "bottom"
    }
  }
}

